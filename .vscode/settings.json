{
  "[javascript][typescript][typescriptreact][html][css][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never", // Let linters, such as ESLint, organize imports
    "source.fixAll.shellcheck": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.fixAll.markdownlint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "eslint.runtime": "node", // Set so ESLint do not use the VS Code built-in Node version
  "typescript.tsdk": "node_modules/typescript/lib" // Set so TypeScript do not use the VS Code built-in TypeScript version
}
